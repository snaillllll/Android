<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:text="简单计算器"
        android:textSize="20sp"
        android:gravity="center"/>
    
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffee"
        android:text="0"
        android:lines="3"
        android:textSize="30sp"
        android:gravity="right|bottom"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:columnCount="4"
        android:rowCount="5">

        <!--第一行-->
        <Button
            android:id="@+id/btn_ce"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="CE"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_chu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="÷"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_cheng"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="×"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_c"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="C"
            android:textSize="20sp" />

        <!--第二行-->
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="7"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="8"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="9"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_jia"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="＋"
            android:textSize="20sp" />

        <!--第三行-->
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="5"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="6"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_jian"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="－"
            android:textSize="20sp" />

        <!--第四行-->
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="1"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="2"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="3"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_gen"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="根号"
            android:textSize="20sp" />

        <!--第五行-->
        <Button
            android:id="@+id/btn_dao"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="1/X"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_dian"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="."
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_deng"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="="
            android:textSize="20sp" />

    </GridLayout>
</LinearLayout>