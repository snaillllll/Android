<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".D5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/iv_icon_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_rpa_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="遥控泊车"
            android:paddingLeft="135dp"
            android:paddingTop="3dp"
            android:textSize="17sp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/ima_quickcontrol_bg"/>
        <TextView
            android:id="@+id/tv_connect_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/img_rpa_refresh"
            android:drawablePadding="10dp"
            android:text="正在连接车辆..."
            android:textSize="14sp"
            android:textColor="#EBEFFA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_park_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_rpa_nor"
            android:text="退出泊车"
            android:textSize="16sp"
            android:textColor="#F0F3FD"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="异常可恢复"/>
            <Button
                android:id="@+id/btn_err_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="异常不可恢复"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>